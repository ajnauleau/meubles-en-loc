
<div class="row d-flex justify-content-center">
<h1>My Profile</h1>
</div>


<div class = "card-profile" >
<div class="container p-4">

  <div class="row d-flex justify-content-between">

    <div class="d-flex justify-content-between col-xs-3 col-md-4 border m-2 p-2">
        <div class="d-flex flex-column">
          <div class = "text_title ">
          <h1>Mes meubles</h1>
          </div>

          <div class = "row d-flex justify-content-between">
            <div class = "meuble">
            <% @meubles.each do |meuble| %>
            <p><strong><%= meuble.name %></strong></p>
            </div>
            <div class="d-flex align-items-center justify-content-center">
            <%= image_tag url_for(meuble.photo), height: 150, width: 150 if meuble.photo.attached? %>
            </div>
            <% end %>
          </div>

        </div>
    </div>

        <% @locations.each do |location| %>
          <div class="d-flex justify-content-between col-xs-3 col-md-4 border m-2 p-2">
            <div class="d-flex flex-column">
              <div class = "text-container">
              <h1>Mes locations</h1>
              <p><strong><%= location.meuble.name %></strong></p>
              <p><strong><%= location.start_date %></strong></p>
              <p> <strong><%= location.end_date %></strong></p>
              <div class="d-flex align-items-center justify-content-center">
              <%= image_tag url_for(location.meuble.photo), height: 150, width: 150 %>
              </div>

              </div>
          </div>
        </div>
      <% end %>


  </div>





    </div>
  </div>
</div>

</div>
