
<div class="border">
<div class="row d-flex justify-content-center p-4">
<h1>My Profile</h1>
</div>


<div class="card-profile">
 <div class="container p-4">

   <div class="d-flex justify-content-around">

     <div class="title-container" style="text-align:center">
       <h1>My Furniture</h1>
          <div class="block">
              <% @meubles.each do |meuble| %>
                  <div class="cards m-4">
                    <div class="d-flex justify-content-between p-2">
                      <div class="d-flex flex-column justify-content-center pl-2 pt-3">
                        <p><strong><%= meuble.name %></strong></p>
                        <p>Price: <%= meuble.daily_rate %> Euros/Day</p>
                        <p>Category: <%= meuble.category %></p>
                        <p><%# meuble.photo_id %></p>
                      </div>
                      <div class="d-flex align-items-center justify-content-center">
                        <%= cl_image_tag meuble.photos.first.key, height: 125, width: 130, crop: :fill if meuble.photos.first %>
                      </div>
                    </div>
                  </div>
              <% end %>
          </div>
     </div>

     <div class="title-container">
       <h1 style="text-align:center">My Bookings</h1>
          <div class="block">
            <% @locations.each do |location| %>
              <div class="cards m-4">
                <div class="d-flex justify-content-between m-2 p-2">
                  <div class="d-flex flex-column justify-content-center pl-2">
                    <p class="pt-3 pl-3"><strong><%= location.meuble.name %></strong></p>
                    <p>From: <%= location.start_date %></p>
                    <p>Until: <%= location.end_date %></p>
                  </div>
                  <div class="d-flex align-items-center justify-content-center">
                    <%= image_tag url_for(location.meuble.photos.first), height: 125, width: 130 %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
     </div>

   </div>


 </div>
</div>
</div>

