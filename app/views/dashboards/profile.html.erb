
<div class="row d-flex justify-content-center">
<h1>My Profile</h1>
</div>


<div class="card-profile">
 <div class="container p-4">

   <div class="row d-flex justify-content-around">
     <h1>My Furniture</h1>
     <h1>My Bookings</h1>
   </div>

   <div class="d-flex justify-content-around">

          <div class="block">
              <% @meubles.each do |meuble| %>
                  <div class="cards m-4">
                    <div class="d-flex justify-content-between col-xs-3 col-md-4 m-2 p-2">
                      <div class="d-flex flex-column justify-content-center pl-2">
                        <p><strong><%= meuble.name %></strong></p>
                        <p><%= meuble.daily_rate %> Euros</p>
                        <p><%= meuble.category %></p>
                        <p><%# meuble.photo_id %></p>
                        <%= link_to 'Details', meuble_path(meuble) %>
                      </div>
                      <div class="d-flex align-items-center justify-content-center">
                        <%= cl_image_tag meuble.photos.first.key, height: 150, width: 150, crop: :fill if meuble.photos.first %>
                      </div>
                    </div>
                  </div>
              <% end %>
          </div>

          <div class="block">
            <% @locations.each do |location| %>
              <div class="cards m-4">
                <p class="pt-3 pl-3"><strong><%= location.meuble.name %></strong></p>
                <div class="d-flex justify-content-between col-xs-3 col-md-4 m-2 p-2">
                  <div class="d-flex flex-column justify-content-center pl-2">
                    <p><strong><%= location.start_date %></strong></p>
                    <p> <strong><%= location.end_date %></strong></p>
                  </div>
                  <div class="d-flex align-items-center justify-content-center">
                    <%= image_tag url_for(location.meuble.photos.first), height: 125, width: 130 %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

   </div>


 </div>
</div>

