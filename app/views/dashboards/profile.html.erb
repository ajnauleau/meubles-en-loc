
<div class="row d-flex justify-content-center">
<h1>My Profile</h1>
</div>


<div class="card-profile">
 <div class="container p-4">

   <div class="row d-flex justify-content-around">
     <h1>Mes meubles</h1>
     <h1>Mes locations</h1>
   </div>

   <div class="row d-flex justify-content-around">

     <div class="d-flex justify-content-between col-xs-3 col-md-4 border m-2 p-2">
          <div class="d-flex flex-column">


            <div class = "row d-flex justify-content-between">
              <div class = "meuble">

              <% @meubles.each do |meuble| %>
              <p><strong><%= meuble.name %></strong></p>
              </div>
              <div class="d-flex align-items-center justify-content-center">

              </div>
              <% end %>
            </div>

          </div>
      </div>


    </div>


     <% @locations.each do |location| %>
          <div class="cards d-flex justify-content-between col-xs-3 col-md-4 m-2 p-2">
              <div class="d-flex flex-column justify-content-center pl-2">
                <p><strong><%= location.meuble.name %></strong></p>
                <p><strong><%= location.start_date %></strong></p>
                <p> <strong><%= location.end_date %></strong></p>
              </div>
              <div class="d-flex align-items-center justify-content-center">
                <%= image_tag url_for(location.meuble.photos.first), height: 150, width: 150 %>
              </div>
          </div>
     <% end %>

 </div>

</div>

