
<div class="card-header d-flex justify-content-center">
  <h1>Meubles index</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-4 col-md-6 col-lg-8">
      <form action="/meubles/filter" method="post">
        <h2 class="text-center m-5">Filter your search</h2>
          <%= simple_form_for(@meuble) do |f| %>
            <%= f.input :category, collection: Meuble::CATEGORIES %>
            <%= f.input :daily_rate %>
            <%= f.submit class:'btn btn-primary', value:'Search'%>
          <% end %>
      </form>
    </div>
  </div>
</div>

<div class="container p-4">
  <div class="row d-flex justify-content-center">
    <% @meubles.each do |meuble| %>
      <div class="col-xs-3 col-md-4  d-flex flex-column border m-2 p-2">
        <p><strong><%= meuble.name %></strong></p>
        <p><%= meuble.daily_rate %> Euro</p>
        <p><%= meuble.category %></p>
        <p><%# meuble.photo_id %></p>
        <%= link_to 'Show', meuble_path(meuble) %>
      </div>
    <% end %>
  </div>
</div>

