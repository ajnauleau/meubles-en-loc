
<div class="background">

  <div class="container pt-4">
    <div class="row justify-content-center">
      <div class="col-4 col-md-6 col-lg-8">
        <form action="/meubles/filter" method="post">
          <%= simple_form_for(@meuble) do |f| %>
            <%= f.input :category, collection: Meuble::CATEGORIES %>
            <%= f.input :daily_rate %>
            <%= f.submit class:'btn btn-primary', value:'Search'%>
          <% end %>
        </form>
      </div>
    </div>
  </div>


  <div class="container p-4 mt-2">
    <div class="row justify-content-center">
      <h3><em><strong>Les meubles fraîchement arrivés...</strong></em></h3>
    </div>
  </div>


  <div class="container p-4">
    <div class="row d-flex justify-content-center">
      <% @meubles.each do |meuble| %>
        <div class="cards d-flex justify-content-between col-xs-3 col-md-4 m-2 p-2">
            <div class="d-flex flex-column">
              <p><strong><%= meuble.name %></strong></p>
              <p><%= meuble.daily_rate %> Euros</p>
              <p><%= meuble.category %></p>
              <p><%# meuble.photo_id %></p>
              <%= link_to 'Details', meuble_path(meuble) %>
            </div>
            <div class="d-flex align-items-center justify-content-center">
              <%= cl_image_tag meuble.photos.first.key, height: 150, width: 150, crop: :fill if meuble.photos.first %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


