
<div class="container mt-2">
  <div class="container card-container mt-2">
    <div class="row">
    <%# @meuble.photos.each do |photo| %>
      <%#= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <%# end %>

    <div class="furniture-pic col-6">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
           <% @meuble.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index==0 %>">
                <%= cl_image_tag photo.key, height: 250, width: 400, crop: :fill %>
              <%#= image_tag "canape_1.jpg", height: 350, width: 500, alt: "alttext" %>
              </div>
              <% end %>

        </div>
      </div>

        <div class="furniture-description col-6">
          <%#= cl_image_tag @meuble.photo.key, height: 300, width: 400, crop: :fill  %>
          <%#= image_tag "home.jpg", height: 300, width: 400, alt: "alttext" %>
          <h1><%= @meuble.name %></h1>
          <p><%= @meuble.description %></p>
          <p><%= "#{@meuble.height}, #{@meuble.width}, #{@meuble.length}" %></p>
          <p><%= @meuble.daily_rate %>â‚¬</p>

            <div class="form-wrapper">
              <%= simple_form_for([@meuble, Location.new]) do |t| %>
              <%#= t.input :start_date, input_html: { class: "datepicker" } %>
              <%= t.input :end_date, as: :string, input_html: { class: "datepicker" }, label: "Date" %>
              <%= t.submit "Go", class: 'btn btn-primary '%>
            <% end %>
            </div>

        </div>





        <a href="/meubles"><div class="btn btn-primary m-4"> Back </div></a>

      </div>

      </div>
    </div>
  </div>
</div>



