<div class="container mt-2">
  <div class="container card-container mt-2">
    <div class="row">
    <%# @meuble.photos.each do |photo| %>
      <%#= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <%# end %>

    <div class="furniture-pic col-6">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src= <%#= cl_image_tag @meuble.photo.key, height: 300, width: 400, crop: :fill %> alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src= <%#= cl_image_tag @meuble.photo.key, height: 300, width: 400, crop: :fill %> alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src= <%#= cl_image_tag @meuble.photo.key, height: 300, width: 400, crop: :fill %> alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="furniture-description col-6">
      <p><%= @meuble.name %></p>
      <p><%= @meuble.description %></p>
      <p><%= "#{@meuble.height}, #{@meuble.width}, #{@meuble.length}" %></p>
      <p><%= @meuble.daily_rate %>â‚¬</p>

      <div class="container">
        <div class="form-wrapper">
          <%= simple_form_for([@meuble, Location.new]) do |t| %>
            <%#= t.input :start_date, input_html: { class: "datepicker" } %>
            <%= t.input :end_date, as: :string, input_html: { class: "datepicker" }, label: "lock" %>
            <%= t.submit "Go", class: 'btn btn-primary '%>
          <% end %>
        </div>
      </div>



    </div>

    </div>
  </div>
</div>



